<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
  </head>
  <body class="background">


    <!--Nav bar -->
    <section class="position-sticky" id="nav">
      <div class="container-fluid bg-warning rounded border border-3 border-dark" style="height: 3rem;">
        <div class="row">
          <div name="Logo" class="col-lg-1 col-2 border-end border-2 border-dark g-2 text-center">
            <a class="none text-dark" href="/">LOGO</a>
          </div>
          <%if(locals.username){%>
          <div class="col-lg-4 offset-lg-7 col-8 offset-2 border-start border-2 border-dark d-inline-flex g-2 justify-content-around ">
          <%}else{%>
          <div class="col-lg-3 offset-lg-8 col-6 offset-4 border-start border-2 border-dark d-inline-flex g-2 justify-content-around ">
            <%}%>
            <div>
              <a name="Home" href="/" class="none links text-dark">Home</a>
            </div> 
            <div>
              <a name="Contact" href="#footer" class="none links text-dark">Contact</a>
            </div> 
            <div>
              <% if(locals.username){%>
                <div class="d-inline-flex gap-5">
                  <a name="Post" href="/post" class="none links text-dark">Post</a>
                  <div class="dropdown">
                    <a class="btn btn-secondary btn-sm btn-success dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      <%= username %>
                    </a>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    </ul>
                  </div>
                </div> 
              <%}else{%>
              <a name="Login" href="/login" class="none links text-dark">Login</a>
              <%}%>
            </div> 
          </div>
        </div>
      </div>  
    </section>

    <!--Title-->
    <section>
      <div class=" border-bottom shadow border-2 border-dark text-center d-flex justify-content-center align-items-center title" style="height: 200px;">
        <div>
          <h1 class="fw-bold display-2">BLOGO</h1>  
          <p name="tagline" class="font-italic lead">"A Blog for everyone"</p>
        </div>
      </div>
    </section>

    <!--Blogs -->
    <section class="p-5 shadow-lg border-bottom border-2 border-dark">
      <h2 class="text-decoration-underline">Posts</h2>
      <div class="blogDiv d-flex flex-column">
        <% if(locals.data){%> 
          <% data.forEach((blog)=>{ %>
            <div class="border border-2 border-dark p-2 m-2">
              <p class="fw-1 fs-1 text-decoration-underline"><%= blog.header%></p>
              <p class="fw-3 fs-4">by <%= blog.username%></p>
              <p class="fw-4 fs-5"><%= blog.blog%></p>
            </div>
          <% }) %>
        <%}%>
      </div>
    </section>


    <!-- Footer -->
    <section class="border-bottom border-2 border-dark title">
      <div class="container " id="footer">
        <footer class="py-3">
          <ul class="nav justify-content-center border-bottom border-1 border-dark pb-3 mb-3">
            <li class="nav-item"><a href="#nav" class="nav-link px-2 text-muted">Home</a></li>
            <li class="nav-item"><a href="#footer" class="nav-link px-2 text-muted">Contact</a></li>
            <li class="nav-item"><a href="/login" class="nav-link px-2 text-muted">Login</a></li>
          </ul>
          <p class="text-center text-muted">Â© 2022 Company, Inc</p>
        </footer>
      </div> 
    </section>

  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="/JS/home.js"></script>
</html>
