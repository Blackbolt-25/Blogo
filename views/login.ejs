<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
    <title>Login</title>
  </head>
  <body>

    <!--Toats-->
    <%if(locals.once){%>
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <strong class="me-auto">Bootstrap</strong>
          <small>11 mins ago</small>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          Hello, world! This is a toast message.
        </div>
      </div>
    </div>
    <%}%>

    <!--Nav bar-->
    <section class="position-sticky" id="nav">
      <div class="container-fluid bg-warning rounded border border-3 border-dark" style="height: 3rem;">
        <div class="row">
          <div name="Logo" class="col-lg-1 col-2 border-end border-2 border-dark g-2 text-center">
            <a class="text-dark none" href="/">LOGO</a>
          </div>
          <div class="col-lg-3 offset-lg-8 col-6 offset-4 border-start border-2 border-dark d-inline-flex g-2 justify-content-around ">
            <div>
              <a name="Home" href="/" class="none links text-dark">Home</a>
            </div> 
            <div>
              <a name="Contact" href="/#footer" class="none links text-dark">Contact</a>
            </div> 
            <div>
              <a name="Login" href="/login" class="none links text-dark">Login</a>
            </div> 
          </div>
        </div>
      </div>  
    </section>

    <!-- Login page-->
    <section class="vh-100 ">
      <div class="container py-5 h-100 ">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-warning text-dark border border-3 border-dark" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center ">

                <div class="mb-md-5 mt-md-5 pb-2">

                  <%if (locals.signup){%>
                  <h2 class="fw-bold mb-5 text-uppercase">Create Account</h2>
                  <form action="/login/signup" method="POST">

                    <div data-mdb-input-init class="form-outline form-dark mb-4">
                      <input type="text" id="typeUserNameX" name="username" class="form-control form-control-lg border border-2 border-dark" />
                      <label class="form-label" for="typeUserNameX">Username</label>
                    </div>

                    <div data-mdb-input-init class="form-outline form-dark mb-4">
                      <input type="password" id="typePasswordX" name="password" class="form-control form-control-lg border border-2 border-dark" />
                      <label class="form-label" for="typePasswordX">Password</label>
                    </div>
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-dark btn-lg px-5" type="submit">Create Account</button>
                  </form>
                  <%}else{%>
                  <h2 class="fw-bold mb-5 text-uppercase">Login</h2>

                  <form action="/login" method="POST">

                    <div data-mdb-input-init class="form-outline form-dark mb-4">
                      <input type="text" id="typeUserNameX" name="username" class="form-control form-control-lg border border-2 border-dark" />
                      <label class="form-label" for="typeUserNameX">Username</label>
                    </div>

                    <div data-mdb-input-init class="form-outline form-dark mb-4">
                      <input type="password" id="typePasswordX" name="password" class="form-control form-control-lg border border-2 border-dark" />
                      <label class="form-label" for="typePasswordX">Password</label>
                    </div>
                    <%if(locals.once){%>
                      <div class="alert alert-danger" role="alert">
                        Wrong Username or Password
                      </div>
                    <%}%>
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-dark btn-lg px-5" type="submit">Login</button>
                  </form>
                  <%}%>
                </div>

                <%if(!locals.signup){%>
                <div>
                  <p class="mb-0">Don't have an account? <a href="/login/signup" class="text-dark fw-bold">Sign Up</a></p>
                </div>
                <%}%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="/JS/home.js"></script>
</html>
